---
interface Props {
  title: string;
  time: string;
  align?: 'left' | 'right';
}

const { title, time, align = 'right' } = Astro.props;

const alignClass = align === 'left' ? 'text-left' : 'text-right';
const rowClass = align === 'left' ? 'flex-row' : 'flex-row-reverse';
---

<div class="leading-tight">
  <p class="sr-only">
    We {title} at {time}
  </p>

  <div class={`px-4 text-xl uppercase tracking-[0.3em] md:text-2xl ${alignClass}`}>
    <span>WE</span>
  </div>

  <div class={`flex ${rowClass} items-baseline justify-between`} aria-hidden="true">
    <span class="text-3xl font-semibold uppercase tracking-[0.15em] md:text-4xl">
      {title}
    </span>
    <span class="whitespace-nowrap text-sm tracking-widest md:text-base">
      {time}
    </span>
  </div>
</div>
