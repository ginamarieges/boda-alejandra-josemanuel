<section aria-labelledby="countdown-heading" class="text-center">
  <h2 id="countdown-heading" class="pb-4 text-center text-xl uppercase tracking-widest">
    Countdown
  </h2>
  <p id="sr-countdown" class="sr-only">Calculating time left...</p>
  <div role="timer" aria-describedby="sr-countdown" class="flex justify-center pt-6">
    <div class="mx-auto ml-4 flex flex-row gap-4">
      <div class="flex flex-col gap-6">
        <div id="days-left" class="text-xl">0</div>
        <span class="text-sm">days</span>
      </div>
      <div class="flex flex-col gap-6">
        <div id="hours-left" class="text-xl">0</div>
        <span class="text-sm">hours</span>
      </div>
      <div class="flex flex-col gap-6">
        <div id="minutes-left" class="text-xl">0</div>
        <span class="text-sm">minutes</span>
      </div>
      <div class="flex flex-col gap-6">
        <div id="seconds-left" class="text-xl">0</div>
        <span class="text-sm">seconds</span>
      </div>
      <div id="countdown" class="text-2xl uppercase"></div>
    </div>
  </div>
</section>

<script>
  const targetDate = new Date('2026-09-26T17:00:00');

  function updateCountdown() {
    const now = new Date();
    const diff = targetDate.getTime() - now.getTime();
    const el = document.getElementById('countdown');
    const days = document.getElementById('days-left');
    const hours = document.getElementById('hours-left');

    const minutes = document.getElementById('minutes-left');
    const seconds = document.getElementById('seconds-left');
    const srCountdown = document.getElementById('sr-countdown');

    if (!el || !days || !minutes || !hours || !seconds || !srCountdown) return;

    if (diff <= 0) {
      el.textContent = '¡Hoy es el gran día!';
      return;
    }

    const secondsLeft = Math.floor(diff / 1000);
    const d = Math.floor(secondsLeft / (60 * 60 * 24));
    const h = Math.floor((secondsLeft / (60 * 60)) % 24);
    const m = Math.floor((secondsLeft / 60) % 60);
    const s = Math.floor(secondsLeft % 60);

    days.textContent = `${d}`;
    hours.textContent = `${h}`;
    minutes.textContent = `${m}`;
    seconds.textContent = `${s}`;
    srCountdown.textContent = `${d} days, ${h} hours, ${m} minutes and ${s} seconds for the wedding day`;
  }

  updateCountdown();
  setInterval(updateCountdown, 1000);
</script>
