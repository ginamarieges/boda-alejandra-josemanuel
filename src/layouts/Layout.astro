---
import '../styles/global.css';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface BodaLayoutProps {
  pageTitle?: string;
  pageDescription?: string;
}

const { pageTitle, pageDescription } = Astro.props as BodaLayoutProps;
const fullPageTitle = pageTitle ? `${pageTitle} · AJ` : 'AJ';
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>{fullPageTitle}</title>
    <meta
      name="description"
      content={pageDescription ?? 'Página de la boda de Alejandra y Jose Manuel'}
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <div class="flex min-h-screen flex-col">
      <Header />
      <main class="flex-1">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
